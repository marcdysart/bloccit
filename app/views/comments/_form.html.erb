 <%= form_for [topic, post, comment] do |f| %>
  <% if post.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(post.errors.count, "error") %>.</h4>
      <ul>
        <% post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
     <%= f.label :"Enter New Comment" %>
     <%= f.text_field :body, class: 'form-control', placeholder: "Enter Comment" %>
  </div>

   <div class="form-group">
     <%= f.submit "Save Comment", class: 'btn btn-success' %>
   </div>
<% end %>
